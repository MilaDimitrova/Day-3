#include <stdio.h>
#include <stdlib.h>


int stepen (int a, int b, int c) {
    if(b == 0) {
        return 0;
    }
    if(c == 1) {
        return a;
    }
    return stepen(a * a, b, c-1);
}

int main() {
    int a, b, counter;
    printf("a = ");
    scanf("%d", &a);
    printf("b = ");
    scanf("%d", &b);
    counter = b;
    printf("%d", stepen(a, b, counter));
    return 1;
}
